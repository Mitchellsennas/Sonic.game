#pragma once
#include "Enemy.h"
#include <SFML/Graphics.hpp>

class Player : public Character {
public:
    Player();
    void update(float dt) override;
    void draw(sf::RenderWindow& win) override;
    sf::FloatRect bounds() const override;

    bool isDescending() const;
    void bounce();
    void hurt(const sf::Vector2f& knock);

    int  getHP() const;
    int  getScore() const;
    void addScore(int s);
    bool canJump() const;
    bool isAlive() const;
    sf::Vector2f center() const;

private:
    void handleInput(float dt);
    void applyPhysics(float dt);

    sf::CircleShape body;
    sf::Vector2f pos, vel;
    float spinAngle = 0.f;

    const float moveSpeed = 260.f;
    const float jumpSpeed = 520.f;
    const float gravity   = 1400.f;

    bool onGround = true;
    int hp = 3, score = 0;
    float invulnTimer = 0.f;

    sf::Font font;
    sf::Text label; // green floating text
};

