#pragma once
#include <SFML/Graphics.hpp>

class Player {
public:
    Player();
    void update(float dt);
    void draw(sf::RenderWindow& win);
    sf::FloatRect bounds() const;
    bool isDescending() const;
    void bounce();
    void hurt(const sf::Vector2f& knock);
    int getHP() const;
    int getScore() const;
    void addScore(int s);
    bool canJump() const;
    bool isAlive() const;
    sf::Vector2f center() const;

private:
    void handleInput(float dt);
    void applyPhysics(float dt);

    sf::CircleShape body;
    sf::Vector2f pos, vel;
    float spinAngle = 0.f;
    bool onGround = true;
    int hp = 3, score = 0;
    float invulnTimer = 0.f;

    // Green floating label
    sf::Font font;
    sf::Text label;

    const float moveSpeed = 260.f;
    const float jumpSpeed = 520.f;
    const float gravity   = 1400.f;
};
