#pragma once
#include "Enemy.h"

class CrabMeat : public Enemy {
public:
    CrabMeat(sf::Vector2f start, float guardRadius);
    void update(float dt) override;
    void draw(sf::RenderWindow& w) override;
    sf::FloatRect bounds() const override;
    sf::Vector2f center() const override { return pos; }

private:
    sf::RectangleShape body, claw;
    sf::Vector2f pos, vel{0.f,0.f};
    float guardR, timer = 0.f;
    bool onGround = true, faceLeft = false;
};

